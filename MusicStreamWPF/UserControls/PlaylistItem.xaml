<UserControl x:Class="MusicStreamWPF.UserControls.PlaylistItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <Grid>
    <StackPanel>
        <Image x:Name="PlaylistImage" Source="{Binding ImageUrl}" Width="100" Height="100"/>
        <TextBlock x:Name="PlaylistName" Text="{Binding Name}" Margin="0,5,0,0"/>
    </StackPanel>
    </Grid>
</UserControl>